<%= link_to 'Voltar', admins_bus_lines_path, class: 'btn' %>

<section class="dashboard-line_show" >
  <h1 class="center-align white-text"><%= @bus_line.name.upcase %></h1>

  <div class="row">
    <div class="col s12 m6">
      <div class="card blue-grey darken-1">
        <div class="card-content white-text">
          <span class="card-title center-align"><%= @bus_line.from %></span>
          <p class="center-align">Até</p>
          <span class="card-title center-align"><%= @bus_line.to %></span>
        </div>
        <div class="card-action">
          <%= link_to 'Editar Linha', edit_admins_bus_line_path(@bus_line) %>
          <%= link_to 'Delete essa Linha', admins_bus_line_path(@bus_line), method: :delete %>
        </div>
      </div>
    </div>
  </div>
  <div class="dashboard-line_tracking">
    <h1 class="center-align white-text">HORÁRIOS</h1>
    <table class="highlight">
      <tbody>
        <% @bus_line.bustracks.each do |track| %>
          <tr>
            <td><%= track.start_time %></td>
            <td><%= track.end_time%></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <div class="dashboard-line_tracking_form">
      <div class="row">
        <div class="col s12">
          horário:
          <div class="input-field inline">
            <%= form_with model: [:admins, @bus_line, @bus_line.bustracks.build ] do |f| %>
              <%= f.label :start_time %>
              <%= f.text_field :start_time %>
              <%= f.label :end_time %>
              <%= f.text_field :end_time %>
              <%= f.submit 'Adiciona', class: 'btn' %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
